<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F3F4F4"
    tools:context=".MainActivity">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/Theme.MyfirstProject.AppBarOverlay"/>

    <include
        layout="@layout/content_main"
        android:layout_gravity="center"
        android:foregroundTint="#D13F3F"
        tools:visibility="visible" />

    <EditText
        android:id="@+id/editTextTextMultiLine2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="100dp"
        android:layout_marginTop="160dp"
        android:ems="10"
        android:gravity="center|top"
        android:hint="Enter Numbers"
        android:inputType="textMultiLine"
        android:minHeight="48dp"
        android:textColor="#FF0000" />

    <Button
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="120dp"
        android:layout_marginTop="220dp"
        android:background="#228B22"
        android:gravity="center"
        android:onClick="mySort"
        android:text="Sort Numbers" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="280dp"
        android:layout_marginRight="50dp"
        android:gravity="center"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_anchor="@+id/textView"
        app:layout_anchorGravity="center|top" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="277dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="60dp"
        android:layout_marginTop="60dp"
        android:background="#003F51B5"
        android:text="INSERTION SORT"
        android:textAlignment="center"
        android:textSize="28sp"
        android:textStyle="bold"
        android:lineSpacingExtra="18dp"
        android:textColor="#FF0000"
        />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="68dp"
        android:layout_marginLeft="120dp"
        android:layout_marginTop="100dp"
        android:text="Please separate numbers by &quot;,&quot; ."
        android:textColor="#0E0E0E"
        android:textSize="12sp"
        />

</androidx.coordinatorlayout.widget.CoordinatorLayout>